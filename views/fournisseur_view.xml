<odoo>
    <data>
        <!-- Form View -->
        <record id="fournisseur_form_view" model="ir.ui.view">
            <field name="name">fournisseur.form.view</field>
            <field name="model">fournisseur.model</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="phone"/>
                            <field name="address"/>
                            <field name="email"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- List View -->
        <record id="fournisseur_list_view" model="ir.ui.view">
            <field name="name">fournisseur.list.view</field>
            <field name="model">fournisseur.model</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="phone"/>
                    <field name="address"/>
                    <field name="email"/>
                </list>
            </field>
        </record>

        <!-- Action -->
        <record id="fournisseur_action" model="ir.actions.act_window">
            <field name="name">Fournisseurs</field>
            <field name="res_model">fournisseur.model</field>
            <field name="view_mode">list,form</field>
        </record>
    </data>
</odoo>
